  <form>
    <div class="form-group">
      <label for="author">Your Name</label>
      {{input value=author id="author" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="questiontitle">What's your question about?</label>
      {{textarea rows=3 value=questiontitle id="questiontitle" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="category">Choose a category:</label>
      <select class="form-control" id="category" onchange={{action "updateValue" value="target.value"}} >
        <option value="Banking" selected="selected">Banking</option>
        <option value="Rental">Rental</option>
        <option value="Education">Education</option>
        <option value="Living">Living</option>
      </select>
    </div>

    <div class="form-group">
      <label for="details">Ask your question</label>
      {{textarea rows=5 value=details id="details" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date type="date" id="date" class="form-control"}}
    </div>

    <button class="btn btn-warning btn-lg btn-block" {{action 'askQuestion'}}>Ask this question</button>
  </form>
