{{#if addNewAnswer}}
<h1>New Answer</h1>
<form>
  <div class="form-group">
    <label for="author">Your Name</label>
    {{input value=author id="author" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="answer">Answer:</label>
    {{textarea rows=3 value=answer id="answer" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="date">Date</label>
    {{input value=date type="date" id="date" class="form-control"}}
  </div>

  <button {{action 'saveAnswer'}}>Submit This Answer</button>
</form>
{{else}}
<button {{action 'showAnswerForm'}} class="btn btn-default">Answer this question</button>
{{/if}}
