<div class="row">
  <div class="col-md-12">
    <button {{action 'showUpdateForm' question}} type="button" class="btn btn-primary pull-right"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
    <button {{action 'delete' question}} type="button" class="btn btn-danger pull-right btn-trash"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    {{#if updateQuestionForm}}
    <form>
      <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=question.author id="author" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="questiontitle">What's your question about?</label>
        {{textarea rows=3 value=question.questiontitle id="questiontitle" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=question.category id="category" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="details">Ask your question</label>
        {{textarea rows=5 value=question.details id="details" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=question.date type="date" id="date" class="form-control"}}
      </div>
      <button class="btn btn-warning btn-lg btn-block" {{action 'update' question}}>Save changes</button>
    </form>
    {{/if}}
  </div>
</div>
{{#if displayQuestion}}
  <div class="row">
    <div class="col-md-12">
      <h2>{{question.questiontitle}}</h2>
      <p>
        <span class="display-date">{{question.author}}, </span>{{question.date}}.
      </p>
      <p>
        {{break-lines question.details}}
      </p>
    </div>
  </div>
{{/if}}

<div class="row">
  <div class="col-md-12">
    <h3>Answers</h3>
      {{# each question.answers as |answer|}}
      {{answer-tile answer=answer}}
      {{/each}}
  </div>
</div>
